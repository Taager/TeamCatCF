<Page x:Class="ExamShopProject.ViewCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamShopProject"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="ViewCustomer">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="49*"/>
            <RowDefinition Height="151*"/>
        </Grid.RowDefinitions>

        <DockPanel Grid.RowSpan="2" Margin="0,0,-0.4,0" Grid.Row="0">
            <Frame x:Name="_customerView" />
        </DockPanel>

        <TextBox  HorizontalAlignment="Left" Height="23" Margin="40,50,0,0" TextWrapping="Wrap" Text="Search..." VerticalAlignment="Top" Width="275"/>
        <ListBox x:Name="lstbx_Customer" HorizontalAlignment="Left" Height="200" Margin="40,40.4,0,0" VerticalAlignment="Top" Width="385" Grid.Row="1" SelectionChanged="lstbx_Customer_SelectionChanged"/>
        <Button Content="Search" HorizontalAlignment="Left" Margin="350,50,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Page>
