<Page x:Class="ExamShopProject.EditCatalogue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamShopProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="EditCatalogue">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="329*"/>
            <ColumnDefinition Width="243*"/>
            <ColumnDefinition Width="82*"/>
            <ColumnDefinition Width="114*"/>
            <ColumnDefinition Width="33*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="31*"/>
            <RowDefinition Height="297*"/>
            <RowDefinition Height="24*"/>
            <RowDefinition Height="33*"/>
        </Grid.RowDefinitions>
        <Label Content="Price to edit: " Margin="177,0.2,10.8,0" Grid.Row="1" />
        <TextBox x:Name="TextBox_Price" Text="{Binding TempProduct}" Margin="3.2,0,0.2,0" Grid.Row="1" Grid.Column="1" Height="31" VerticalAlignment="Bottom"  />
        <Button x:Name="Btn_Save" Content="Save" Margin="5.4,2.2,7.2,0.8" Click="Button_Click_Save" Grid.Row="3" Grid.Column="3" />
    </Grid>
</Page>
