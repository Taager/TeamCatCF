<Page x:Class="ExamShopProject.OpenDeals"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamShopProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="700"
      Title="OpenDeals">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="32*"/>
            <RowDefinition Height="193*"/>
        </Grid.RowDefinitions>
        
        <DockPanel Grid.ColumnSpan="1" Grid.Row="1">
            <Frame x:Name="_deals" />
        </DockPanel>

        <Button Content="View" HorizontalAlignment="Left" VerticalAlignment="Center" Width="75" Margin="40,0,0,0"/>
        <Button Content="Create" HorizontalAlignment="Left" Margin="151,22,0,0" VerticalAlignment="Top" Width="75"/>

    </Grid>
</Page>
