<Page x:Class="ExamShopProject.ViewSubscriptionsDetails"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamShopProject"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViewSubscriptionsDetails">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="133*"/>
            <ColumnDefinition Width="161*"/>
            <ColumnDefinition Width="188*"/>
            <ColumnDefinition Width="139*"/>
            <ColumnDefinition Width="151*"/>
            <ColumnDefinition Width="28*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="64*"/>
            <RowDefinition Height="65*"/>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="49*"/>
        </Grid.RowDefinitions>
        <!--#region Labels-->
        <Label x:Name="Label_Customer" Content="Customer: " Grid.Column="1" Grid.Row="1"/>
        <Label x:Name="Label_EndDate" Content="Date to expire: " Grid.Column="1" Grid.Row="2"/>
        <Label x:Name="Label_AutoRenew" Content="Auto renew: " Grid.Row="2" Margin="-60,54,32,10" Grid.RowSpan="2"/>
        <Label x:Name="Label_CategoriesSubscribeTo" Content="Categories to subscribe to: " Grid.Column="1" Grid.Row="4"/>
        <!--#endregion-->
        <!--#region I/O-->
        <TextBox x:Name="TextBox_Customer" Text="{Binding CustomerName}" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="1" Margin="10,0,0,0" Height="26" VerticalAlignment="Top" IsEnabled="False" />
        <DatePicker x:Name="DatePicker_EndDate" SelectedDate="{Binding EndDate}" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="2" Margin="10,0,0,0" Height="26" VerticalAlignment="Top" IsEnabled="False" />
        <CheckBox x:Name="CheckBox_AutoRenew" IsChecked="{Binding Renew}" Grid.Column="2" Grid.Row="3" Margin="10,10,89,0" Height="16" VerticalAlignment="Top" IsEnabled="False" />
        <ListBox x:Name="ListBox_CategoriesSubscripeTo" Grid.Column="2" Grid.ColumnSpan="2" Grid.Row="4" Margin="10,0,0,0" Grid.RowSpan="2" Height="100" VerticalAlignment="Top" IsEnabled="False" />
        <!--#endregion-->
        <!--#region Buttons-->
        <Button x:Name="Btn_Edit" Content="Edit" FontSize="15" Grid.Column="3" Grid.Row="6" Click="Btn_Edit_Enable" Margin="10,0,0,0" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="119"/>
        <Button x:Name="Btn_Save" Content="Save" FontSize="15" Grid.Column="4" Grid.Row="6" Click="Btn_Save_Click" IsEnabled="False" Margin="27,0,0,0" Height="27" VerticalAlignment="Top" HorizontalAlignment="Left" Width="114" />
        <Button x:Name="Btn_Delete" Content="Delete" Grid.Row="6" IsEnabled="False" Opacity="0" Click="Btn_Click_DeleteSubscription" Margin="34,2,0,0" Grid.Column="2" Height="26" VerticalAlignment="Top" HorizontalAlignment="Left" Width="127"  />
        <!--#endregion-->
    </Grid>
</Page>
