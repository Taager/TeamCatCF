<Page x:Class="ExamShopProject.Statistics_ProductCategories"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamShopProject"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="Statistics_ProductCategories">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="131*"/>
            <ColumnDefinition Width="169*"/>
        </Grid.ColumnDefinitions>
        <!--#region Labels-->
        <Label Content="Top X:" HorizontalAlignment="Left" Margin="67,69,0,0" VerticalAlignment="Top"/>
        <!--#endregion-->
        <!--#region I/O-->
        <TextBox x:Name="txtbx_TopX" HorizontalAlignment="Left" Height="23" Margin="113,72,0,0" TextWrapping="Wrap" Text="{Binding ChosenTopNum}" VerticalAlignment="Top" Width="120"/>
        
        <!--#endregion-->
        <!--#region Buttons-->
        <StackPanel Margin="67,126,52,242">
            <RadioButton x:Name="RadioBtn_Products" Content="Products" />
            <RadioButton x:Name="RadioBtn_Product_Category" Content="Product Categories" />
        </StackPanel>
        <!--#endregion-->
    </Grid>
</Page>
