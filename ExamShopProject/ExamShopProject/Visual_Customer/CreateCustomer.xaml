<Page x:Class="ExamShopProject.Visual_Customer.CreateCustomer"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ExamShopProject.Visual_Customer"
      mc:Ignorable="d" 
      d:DesignHeight="400" d:DesignWidth="600"
      Title="CreateCustomer">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="6*"/>
            <ColumnDefinition Width="20*"/>
        </Grid.ColumnDefinitions>
        <Label Content="Create Customer" Grid.Column="1" HorizontalAlignment="Center" Margin="0,20,0,0" VerticalAlignment="Top"/>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="0,70,40,0" TextWrapping="Wrap" Text="{Binding Path=Name}" VerticalAlignment="Top" Width="270" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="40,110,40,0" TextWrapping="Wrap" Text="{Binding Path=Adress}" VerticalAlignment="Top" Width="270" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="40,150,40,0" TextWrapping="Wrap" Text="{Binding Path=ContactInfo}" VerticalAlignment="Top" Width="270" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="40,190,40,0" TextWrapping="Wrap" Text="{Binding Path=SpokesPerson}" VerticalAlignment="Top" Width="270" Grid.Column="1"/>
        <TextBox HorizontalAlignment="Right" Height="23" Margin="40,230,40,0" TextWrapping="Wrap" Text="{Binding Path=AnnualIncome}" VerticalAlignment="Top" Width="270" Grid.Column="1"/>
        <Button x:Name="btn_SaveCustomer" Content="Save Customer" Grid.Column="1" HorizontalAlignment="Right" Margin="0,0,40,40" VerticalAlignment="Bottom" Width="90" Height="25" />
        <Label Content="Navn:" Grid.Column="1" HorizontalAlignment="Left" Margin="20,70,0,0" VerticalAlignment="Top"/>
        <Label Content="Adresse:" Grid.Column="1" HorizontalAlignment="Left" Margin="20,110,0,0" VerticalAlignment="Top"/>
        <Label Content="Kontakt information:" Grid.Column="1" HorizontalAlignment="Left" Margin="20,150,0,0" VerticalAlignment="Top"/>
        <Label Content="Spokes Person:" Grid.Column="1" HorizontalAlignment="Left" Margin="20,190,0,0" VerticalAlignment="Top"/>
        <Label Content="Årlig indkomst:" Grid.Column="1" HorizontalAlignment="Left" Margin="20,230,0,0" VerticalAlignment="Top"/>

    </Grid>
</Page>
